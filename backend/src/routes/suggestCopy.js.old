const express = require('express');
const router = express.Router();
const { OpenAI } = require('openai');

const openai = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

router.post('/suggest-copy', async (req, res) => {
  try {
    const {
      region,
      tone,
      offerType,
      psychologicalTrigger,
      ageRange,
      marketNiche
    } = req.body;

    // Define idioma com base na região
    let languageHint = 'Escreva a mensagem em português.';
    if (region === 'us' || region === 'intl') languageHint = 'Write the message in English.';
    else if (['co', 'mx', 'pe', 'ar', 'cl'].includes(region)) languageHint = 'Escribe el mensaje en español.';

    const prompt = `
${languageHint}
Gere uma mensagem curta e direta para WhatsApp com foco em ${offerType || 'uma oferta'}, usando um tom ${tone || 'neutro'}, com apelo psicológico baseado em ${psychologicalTrigger || 'escassez'}.
O público está localizado em ${region || 'uma região genérica'}, tem faixa etária ${ageRange || 'indefinida'}, e o nicho de mercado é ${marketNiche || 'genérico'}.
A mensagem deve conter uma variável no formato {{1}} para personalização com o nome do destinatário.
Evite termos rebuscados e comunique a oferta com clareza e impacto.
`;

    const completion = await openai.chat.completions.create({
      model: 'gpt-4o',
      messages: [{ role: 'user', content: prompt }],
      temperature: 0.7
    });

    const suggestion = completion.choices[0]?.message?.content || '';
    res.json({ suggestion });

  } catch (err) {
    console.error('Erro ao gerar sugestão com IA:', err);
    res.status(500).json({ error: 'Erro ao gerar sugestão com IA' });
  }
});

module.exports = router;